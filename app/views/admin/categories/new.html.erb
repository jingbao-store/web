<% content_for :title, "New Category" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_categories_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Categories
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Category</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @category %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@category, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@category, :name) ? { required: true } : {}) %>
          <% if @category.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @category.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@category, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@category, :slug) ? { required: true } : {}) %>
          <% if @category.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @category.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Icon -->
        <div class="mb-4">
          <%= form.label :icon, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Icon<% if field_required?(@category, :icon) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :icon, {
            placeholder: "Enter icon...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@category, :icon) ? { required: true } : {}) %>
          <% if @category.errors[:icon].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @category.errors[:icon].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@category, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@category, :description) ? { required: true } : {}) %>
          <% if @category.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @category.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Display order -->
        <div class="mb-4">
          <%= form.label :display_order, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Display order<% if field_required?(@category, :display_order) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :display_order, {
            placeholder: "Enter display order...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@category, :display_order) ? { required: true } : {}) %>
          <% if @category.errors[:display_order].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @category.errors[:display_order].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_categories_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Category", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>